<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:padding="16dp">

        <TableRow>
            <TextView android:text="Match" android:padding="8dp" android:textStyle="bold"/>
            <TextView android:text="Score" android:padding="8dp" android:textStyle="bold"/>
            <TextView android:text="Possession" android:padding="8dp" android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <TextView android:text="Real Madrid vs PSG" android:padding="8dp"/>
            <TextView android:text="3 - 2" android:padding="8dp"/>
            <TextView android:text="55% - 45%" android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView android:text="Man City vs Bayern" android:padding="8dp"/>
            <TextView android:text="2 - 2" android:padding="8dp"/>
            <TextView android:text="60% - 40%" android:padding="8dp"/>
        </TableRow>
    </TableLayout>
</ScrollView>
